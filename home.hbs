{{!< default}} <div class="container-fluid wrapper">
  <section class="row posts desktop">
    {{#foreach posts from="1"}}
    <div class="col-xs-12 col-md-6 post-wrap">
      {{> post-card class="col"}}
    </div>
    {{/foreach}}
  </section>

  <div class="mobile">
    <section class="section latest-post">
      <!-- Slider main container -->
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          {{#get "posts" filter="primary_tag:applicants" order="slug asc"}}
          {{#foreach posts to="6"}}
          <div class="swiper-slide">
            <div class="row">
              <div class="col-xs {{#unless feature_image}}m-t-lg m-b-lg{{/unless}}">
                {{> post-card class="post-card--special" lazy=false }}
                <div class="tag" style="position: absolute; top: 12px; left: 12px; z-index: 99">
                  <a class="tag-applicants post-card__tag" href="/tag/applicants/" title="{{name}}"
                    aria-label="{{name}}s">Соискателям</a>
                </div>
              </div>
            </div>
          </div>
          {{/foreach}}
          {{/get}}
        </div>
      </div>
    </section>
    <div class="row posts mobile">
      {{#foreach posts from="1" to="4"}}
      <div class="col-xs-12 col-md-6 post-wrap">
        {{> post-card class="col--main"}}
      </div>
      {{/foreach}}
    </div>
    <section class="section latest-post">
      <!-- Slider main container -->
      <div class="swiper" style="padding-bottom: 32px;">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          {{#get "posts" filter="primary_tag:employers" order="slug asc"}}
          {{#foreach posts to="6"}}
          <div class="swiper-slide">
            <div class="row">
              <div class="col-xs {{#unless feature_image}}m-t-lg m-b-lg{{/unless}}">
                {{> post-card class="post-card--special" lazy=false }}
                <div class="tag" style="position: absolute; top: 12px; left: 12px; z-index: 99">
                  <a class="tag-employers post-card__tag" href="/tag/employers/" title="{{name}}"
                    aria-label="{{name}}s">Работодателям</a>
                </div>
              </div>
            </div>
          </div>
          {{/foreach}}
          {{/get}}
        </div>
      </div>
    </section>
    <div class="row posts mobile">
      {{#foreach posts from="5" to="8"}}
      <div class="col-xs-12 col-md-6 post-wrap">
        {{> post-card class="col"}}
      </div>
      {{/foreach}}
    </div>
  </div>

  <button id="load-more-posts" class="btn btn--wide btn--primary">
    Показать больше статей
  </button>

  <div class="mobile">
    {{> mobile-sidebar}}
  </div>

  <span class="button-spinner" id="button-spinner">
    <img src="/assets/icons/spinner.svg" alt="">
  </span>
  </div>