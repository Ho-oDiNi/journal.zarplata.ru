{{!< default}}

<div class="container-fluid wrapper">
  <div class="row m-t-lg">
    <div class="col-xs-12 col-lg-8 col-xl-9">
      <section class="section all-posts">
        <div class="row posts">
          {{#foreach posts}}
            <div class="col-xs-12 col-md-4 post-wrap">
              {{> post-card class="col"}}
            </div>
          {{/foreach}}
        </div>
        <div class="row">
          <div class="col-xs-12 center-xs">
            <button id="load-more-posts" class="btn btn--wide btn--more btn--bordered">
              {{t "Load more posts"}}
            </button>
          </div>
        </div>
      </section>
    </div>
    <div class="col-xs col-lg-4 col-xl-3 has-sidebar">
      {{> sidebar}}
    </div>
  </div>
</div>
