{{!-- Blog search --}}
<dialog class="search" id="modal_search">
  <div class="search__header">
    <form action="/" method="get" class="search__form" id="search-form">
      <input type="text" id="ghost-search-field" class="search__input" title="{{t " Search"}}" placeholder="Поиск..."
        autocomplete="off" required />
      <div class="search__icon">
        {{>icon name="search" size="lg"}}
      </div>
    </form>
    <a tabindex="0" class="search--close" id="search-close">
      {{>icon name="x" size="lg"}}
    </a>
  </div>
  <div class="search-helper">
    {{#get "tags" limit="8" include="count.posts" order="count.posts desc"}}
    {{#foreach tags}}
    <div class="search__tag js-search-tag" tabindex="0" title="{{name}}">{{name}}</div>
    {{/foreach}}
    {{/get}}
  </div>
  <div class="search-content">
    <div class="search-result" id="ghost-search-results">
      {{#get "posts" limit="6" order="slug desc"}}
      {{#foreach posts}}
      <a href="{{url}}" class="search-result__post animate fade-in-up">
        <div class="search-result__content">
          <h6 class="search-result__title">{{title}}</h6>
          <p class="search-result__date">{{date published_at format='DD MMM YYYY'}}</p>
        </div>
        <img class="search-result__image" src="{{feature_image}}" alt="{{feature_image_alt}}">
      </a>
      {{/foreach}}
      {{/get}}
    </div>
  </div>
</dialog>